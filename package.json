{
  "name": "vite-react-ssr",
  "private": true,
  "version": "2.3.0",
  "type": "module",
  "engines": {
    "node": "22.14.0",
    "pnpm": "10"
  },
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "DISABLE_REDIS_CACHE=true tsx watch server.ts",
    "build": "rm -rf dist/ && run-s build:*",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build -c vite.ssr.config.ts --outDir dist/server --ssr src/entry-server.tsx",
    "prod": "DISABLE_REDIS_CACHE=false NODE_ENV=production tsx server.ts",
    "lint": "eslint src tests",
    "prettier:write": "prettier -w .",
    "prettier:check": "prettier -c .",
    "types": "tsc --project tsconfig.app.json --noEmit",
    "analyze": "analyze --config vite.analyze.ts",
    "test": "vitest --run --exclude tests",
    "test:ui": "vitest --coverage --ui --exclude tests",
    "e2e": "exec playwright test",
    "e2e:ui": "exec playwright test --ui",
    "e2e:report": "exec playwright show-report",
    "e2e:codegen": "exec playwright codegen https://ssr-local.com:3000",
    "generate-pwa-assets": "pwa-assets-generator",
    "docker:build": "docker build -t vite-react-ssr:latest .",
    "docker:run": "docker run -it --cpus=1 --memory=256m -p 3000:3000 -d --name vite-react-ssr vite-react-ssr:latest",
    "docker:stop": "docker stop vite-react-ssr",
    "docker:compose": "COMPOSE_BAKE=true docker compose up -d",
    "prepare": "git config --local core.hooksPath .githooks || echo 'An error occurred while installing the git hooks configuration'"
  },
  "dependencies": {
    "@tanstack/react-query": "5.76.1",
    "@tanstack/react-query-devtools": "5.76.1",
    "compression": "1.8.0",
    "express": "5.1.0",
    "ioredis": "5.6.0",
    "js-cookie": "3.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "7.5.0",
    "serialize-javascript": "6.0.2",
    "server-timing": "3.3.3",
    "tsx": "4.19.4",
    "valibot": "1.0.0",
    "vite": "6.3.5"
  },
  "devDependencies": {
    "@eslint/js": "9.24.0",
    "@playwright/test": "1.51.1",
    "@svgr/plugin-jsx": "8.1.0",
    "@svgr/plugin-svgo": "8.1.0",
    "@tailwindcss/vite": "4.1.3",
    "@tanstack/eslint-plugin-query": "5.72.2",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/compression": "1.7.5",
    "@types/express": "5.0.1",
    "@types/js-cookie": "3.0.6",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@types/serialize-javascript": "5.0.4",
    "@vite-pwa/assets-generator": "1.0.0",
    "@vitejs/plugin-react-swc": "3.8.1",
    "@vitest/eslint-plugin": "1.1.40",
    "@vitest/ui": "3.1.1",
    "browserslist": "4.24.4",
    "eslint": "9.24.0",
    "eslint-import-resolver-typescript": "4.3.2",
    "eslint-import-resolver-vite": "2.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "2.2.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-sonarjs": "3.0.2",
    "eslint-plugin-testing-library": "7.1.1",
    "globals": "16.0.0",
    "jsdom": "26.0.0",
    "lightningcss": "1.29.3",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "sharp": "0.34.1",
    "svgo": "3.3.2",
    "tailwindcss": "4.1.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.1",
    "unplugin-detect-duplicated-deps": "2.0.0",
    "unplugin-unused": "0.4.4",
    "vite-bundle-analyzer": "0.18.1",
    "vite-plugin-image-optimizer": "1.1.8",
    "vite-plugin-mkcert": "1.17.8",
    "vite-plugin-pwa": "1.0.0",
    "vite-plugin-static-copy": "2.3.1",
    "vite-plugin-svgr": "4.3.0",
    "vite-plugin-unused-code": "0.1.6",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  }
}
